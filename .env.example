# ===========================================
# Product Tracker - Environment Variables
# ===========================================

# PostgreSQL Database
POSTGRES_USER=producttracker
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=producttracker
POSTGRES_PORT=5432

# N8N
N8N_USER=admin
N8N_PASSWORD=your_n8n_password_here
N8N_HOST=localhost
N8N_PORT=5678

# Claude API (Anthropic)
CLAUDE_API_KEY=sk-ant-your_api_key_here

# Discord
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# Web Dashboard
WEB_HOST=localhost
WEB_PORT=3000
DATABASE_URL=postgresql://producttracker:your_secure_password_here@localhost:5432/producttracker

# Optional: Email (for reports)
EMAIL_FROM=noreply@producttracker.local
EMAIL_TO=your@email.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user
SMTP_PASS=password
